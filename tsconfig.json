{
  "include": ["./src/**/*"],
  "exclude": ["./node_modules", "./lib"],
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "lib",
    "declarationMap": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true
  }
}
